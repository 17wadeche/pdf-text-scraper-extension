{
  "manifest_version": 3,
  "name": "Attachment Formatting Tool",
  "description": "Formatting Tool for that highlights, bolds and colors words based on the configuration selected for PDF files.",
  "version": "0.0.2",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.mjs",
        "images/loading-icon.gif",
        "pdf.worker.mjs",
        "pdf_viewer.mjs",
        "pdf_viewer.css",
        "styles.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}