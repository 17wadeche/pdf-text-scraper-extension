{
  "manifest_version": 3,
  "name": "Attachment Formatting Tool",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.mjs",
        "pdf.worker.mjs",
        "pdf_viewer.js",
        "styles.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}