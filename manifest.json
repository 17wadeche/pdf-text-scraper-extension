{
  "manifest_version": 3,
  "name": "Attachment Formatting Tool",
  "version": "0.1.0",
  "description": "Highlight & style PDF text with draggable panel, themes & searchable selects",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.mjs",
        "pdf.worker.mjs",
        "styles.js",
        "libs/interact.esm.mjs",
        "libs/choices.esm.mjs"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
